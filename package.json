{
  "name": "photon-keyserver",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanx/photon-keyserver.git"
  },
  "scripts": {
    "postinstall": "sls dynamodb install",
    "start": "sls offline start",
    "test": "npm run -s test:lint && npm run -s test:unit && npm run -s test:integration",
    "test:lint": "standard *.js 'src/**/*.js' 'test/**/*.js'",
    "test:unit": "mocha test/unit/",
    "test:integration": "sls offline start & P1=$! && wait-on tcp:3000 && sls invoke test && kill $P1"
  },
  "dependencies": {
    "aws-sdk": "^2.635.0",
    "twilio": "^3.40.0",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "axios": "^0.19.2",
    "mocha": "^7.1.1",
    "serverless": "^1.67.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^5.12.1",
    "sinon": "^9.0.1",
    "standard": "^14.3.3",
    "unexpected": "^11.14.0",
    "wait-on": "^4.0.1"
  }
}
